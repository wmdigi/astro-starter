---
import Layout from "@src/layouts/Layout.astro";

import reel from "@videos/reel.mp4";
---

<Layout title="Homepage">
	<section id="hero" class="pt-nav pb-0 w-full h-svh flex flex-col items-start justify-end gap-8 pl-8">
		<div class="hero-video-wrapper">
			<video src={reel} autoplay playsinline loop muted class="hero-video w-[clamp(15rem,30vw,40rem)]"></video>
		</div>
		<h1 data-split-text>Starter</h1>
	</section>
</Layout>
