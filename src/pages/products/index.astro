---
import Layout from "@src/layouts/Layout.astro";
import ResourceCard from "@src/components/ResourceCard.astro";
import ProductCard from "@components/ProductCard.astro";
import { products } from "@lib/data";
---

<Layout title="Products">
	<section id="hero" class="pt-hero w-full h-svh">
		<div class="container flex flex-col items-start justify-start gap-8 md:gap-16">
			<h2 data-split-text>Products</h2>
			<div class="w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-2 place-items-stretch overflow-hidden">
				{products?.map(({ title, description, price, cover, slug }) => (
					<ProductCard
						title={title}
						description={description}
						price={price}
						cover={cover}
						slug={slug}
						data-split-cards
						class="translate-y-full"
					/>
				))}
			</div>
		</div>
	</section>
</Layout>
