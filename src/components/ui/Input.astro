---
const {
	type = "text",
	name,
	placeholder,
	disabled,
	required,
	pattern,
	minlength,
	value,
	style,
	theme = null,
} = Astro.props;

const lightClasses = "border-black/30 hover:border-black/60 placeholder:text-black/30";
const darkClasses = "dark:border-white/30 dark:hover:border-white/60 dark:placeholder:text-white/30 dark:text-white";
---

<input
	{type}
	{placeholder}
	{name}
	{disabled}
	{required}
	{pattern}
	{minlength}
	{value}
	class={`bg-transparent border px-4 focus:border-lime-400 dark:focus:border-lime-400 w-full focus:ring-0
		${theme ? (theme === "light" ? lightClasses : darkClasses) : lightClasses + " " + darkClasses}
		disabled:pointer-events-none disabled:opacuty-30
		invalid:bg-red-500/5 invalid:border-red-500 invalid:focus-visible:border-red-500
		focus-visible:outline-none transition-colors duration-200 ease-in-out ${style}`}
/>
