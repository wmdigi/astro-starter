---
const {
	type = "text",
	name,
	placeholder,
	disabled,
	required,
	pattern,
	minlength,
	value,
	error,
	theme = null,
	class: className,
	...props
} = Astro.props;

const lightClasses = "border-black/30 hover:border-black/60 placeholder:text-black/30";
const darkClasses = "dark:border-white/30 dark:hover:border-white/60 dark:placeholder:text-white/30 dark:text-white";
---

<label for={name} class="relative">
	<input
		{type}
		{placeholder}
		{name}
		{disabled}
		{required}
		{pattern}
		{minlength}
		{value}
		class:list={[
			'bg-transparent text-white placeholder:text-white/70 border empty:border-white p-4 focus:border-lime-400 dark:focus:border-lime-400 w-full focus:ring-0 disabled:pointer-events-none disabled:opacity-30 rounded-full invalid:bg-red-500/5 invalid:border-red-500 invalid:focus-visible:border-red-500 focus-visible:outline-none transition-colors duration-200 ease-in-out', 
			theme ? (theme === "light" ? lightClasses : darkClasses) : lightClasses + " " + darkClasses,
			className
		]}
		{...props}
	/>
	{error && <span class="absolute left-4 -bottom-1 translate-y-full text-white">Something is wrong..</span>}
</label>
