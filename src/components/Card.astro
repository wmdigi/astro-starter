---
// Components
import { Image } from "astro:assets";

// Assets
import placeholder from "@images/placeholder.jpg";

const {
	title = "Title of the card",
	cover = placeholder,
	description = "Description of the card goes here. It should be a brief summary of the content.",
	date = new Date(),
	class: className,
	...props
} = Astro.props;
---

<div
	class:list={[
		"relative flex flex-col items-stretch justify-start overflow-hidden rounded-2xl",
		"before:absolute before:inset-0 before:border before:border-neutral-100 dark:before:border-neutral-500 before:rounded-2xl before:pointer-events-none",
	]}
>
	<Image src={cover} alt={title} class="relative w-[calc(100%+2px)] h-auto aspect-video object-cover" />
	<div class="p-md pt-lg flex flex-col items-stretch justify-start gap-lg">
		<div class="w-full flex flex-col items-start justify-start gap-xs">
			<p class="text-sm text-neutral-500 dark:text-neutral-400">{date.toLocaleDateString()}</p>
			<h3 class="text-4xl/[85%]">{title}</h3>
		</div>
		<p class="text-base">{description}</p>
	</div>
</div>
