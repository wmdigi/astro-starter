---
import CartIcon from "@icons/CartIcon.astro";

const cartCount = 1
---

<script>
	import { $ } from "@wmdigi/dom";

	$("#cart").addClass("server-loaded");
</script>

<a id="cart" href="/cart" class="relative">
	<CartIcon class:list={["w-8 text-black dark:text-white"]} />
	<span class="absolute top-0 right-0 translate-x-1/3 -translate-y-1/3 w-4 h-4 flex items-center justify-center pt-px text-xs text-white dark:text-black bg-black dark:bg-white rounded-full server-loaded:motion-preset-expand ">
		{cartCount}
	</span>
</a>